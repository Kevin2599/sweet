#! /usr/bin/env bash

#
# Execute all jobs by directly running them from the current shell
#


if [[ -z "$1" ]]; then
	DIRS=job_bench*
else
	DIRS=$@
fi

P="$(pwd)"
for i in $DIRS; do
	cd "$i"

	echo_info "Executing '$i'"

	./run.sh 2>"output.err" > "./output.out" &

	SCRIPT_PID=$!

        # Wait for finish
        wait $SCRIPT_PID

	EXIT_CODE=$?

	if [[ 0 -ne $EXIT_CODE ]]; then
		echo_error_hline
		echo_error "ERROR during job execution"
		echo_error_hline
		echo_error " Job directory: '$P'"
		echo_error " See output.out and output.err in job directory for more information"
		echo_error_hline
		tail -n 100 "output.out"
		tail -n 100 "output.err"
		exit 1
	fi

	cd "$P"
done

